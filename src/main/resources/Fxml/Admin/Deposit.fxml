<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="deposit-container" stylesheets="@../../Styles/Deposit.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.paylink.paylink.controllers.Admin.DepositController">
    <VBox layoutX="15.0" layoutY="90.0" prefHeight="570.0" prefWidth="820.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="100.0">
        <HBox alignment="CENTER" prefHeight="31.0" prefWidth="820.0" styleClass="search-box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search Payee Address"/>
            <TextField fx:id="pAddress_fld"/>
            <Button mnemonicParsing="false" text="Search">
                <graphic>
                    <FontAwesomeIconView fx:id="search_btn" fill="WHITE" glyphName="SEARCH" size="20"/>
                </graphic>
            </Button>
        </HBox>
        <Pane prefHeight="150.0" prefWidth="820.0" />
        <ListView fx:id="result_listview" prefHeight="349.0" prefWidth="820.0" />
        <Pane prefHeight="150.0" prefWidth="820.0" />
        <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="300.0" prefWidth="100.0" styleClass="deposit-box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Deposit Section"/>
            <TextField fx:id="amount_fld" alignment="CENTER" promptText="Amount"/>
            <Button fx:id="deposit_btn" mnemonicParsing="false" text="Deposit">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="MONEY" size="20"/>
                </graphic>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>
